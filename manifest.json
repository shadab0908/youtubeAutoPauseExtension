{
  "manifest_version": 3,
  "name": "YouTube Auto Pause Pro",
  "version": "1.1",
  "description": "Automatically pauses YouTube videos when switching tabs or windows, with smart resume options.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon128.png",
      "48": "icons/icon128.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
